@model RegistroChamado.Models.ColaboradorModel

@{
    ViewData["Title"] = "Cadastrar Colaborador";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <input type="radio" asp-for="Status" class="form-check-input" value="1" checked="true"> Ativo
            <input type="radio" asp-for="Status" class="form-check-input" value="0"> Inativo
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SetorId" class="control-label"></label>
            <select asp-for="SetorId" class="form-control" asp-items="@ViewBag.Setores"></select>
            <span asp-validation-for="SetorId" class="text-danger"></span>
        </div>
        <div class="row">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
<hr />
<div class="row">
    <a asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
